<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/displayItemImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelItemId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/labelItemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"

            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/labelItmDateLost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Found"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/labelItemColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginTop="20dp"
            android:textAlignment="viewStart"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/labelItemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desription"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textSize="10pt" />
        <TextView
            android:id="@+id/labelItemLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textSize="10pt" />
        <TextView
            android:id="@+id/labelItmTrackingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tracking ID"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textSize="10pt"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/displayItemImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnModify"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="115dp"
            android:background="@color/colorPrimary"
            android:text="Modify"
            android:textColor="@android:color/white"
            android:textSize="9pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="128dp"
            android:background="@color/colorPrimary"
            android:text="Delete"
            android:layout_marginTop="115dp"
            android:textColor="@android:color/white"
            android:textSize="9pt"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>
